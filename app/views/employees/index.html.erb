<h3 style="width:180px; margin:10px auto; padding:10px; text-align:center; background:white; color:black;" >Employees list</h3>
<br>
<center>
<div>
<%= form_with url: employees_path, method: 'get' do |f| %>
  Search:
  <%= f.text_field :q, value: params[:q] ,placeholder:'Search employee by emp_name' %>
  <%= f.submit "search" %>
  <%= link_to "clear", employees_path %>
  <% end %>
  </div>
  <br>

  
</center>
<br>
<center>
<table border="5" bordercolor=black; background:grey ; color:black >
<div style="text-align:center">
<thead style="text-align:center">

<th style="background-color:green ; color:white" >Name</th>
<th style="background-color:green ; color:white" >Depatment</th>
<th style="background-color:green ; color:white" >Salary</th>
</thead>

<% @employees.each do |employee| %>
<tr style="text-align:center">
<td><%= employee.name %> </td>


<td><%= employee.department %></td>
<td><%= employee.salary %></td>

<td><%= link_to "show", employee_path(employee) %></td>
<td><%= link_to "Edit", edit_employee_path(employee) %></td>
<td><%= link_to "delete", employee_path(employee), method: :delete, data: { confirm: "are u sure"} %></td>
<td><%= link_to "download pdf", download_pdf_employee_path(employee) %></td>

</td>
</tr>

<% end %>
</div>
</table>
<br>


<%= link_to "New Employee",new_employee_path %>
</center>
<%= nav_bar fixed: :top, brand: "OSI DIGITAL" do %>
    <%= menu_group do %>
        <%= menu_item "Home", employees_home_path %>
        <%= menu_item "About Us", employees_aboutus_path %>
        <%= menu_item "Contact", employees_contact_path %>
        <%= menu_item "Employee Information", employees_path %>
    <% end %>
    <% end %>
